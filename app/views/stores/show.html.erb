<main>
  <div class="global-container">
    <p style="color: green"><%= notice %></p>
    <h2><%= @store.name %></h2>
    <div class="inline-container">
      <%= link_to "Editar", edit_store_path(@store), class: 'small-green-button' %>
      <% if @store.discarded? %>
      <%= button_to "Ativar", active_store_store_path(id: @store.id), method: :put, data: { confirm: "Are you sure?" }, class: "small-green-button"  %>
      <% else %>
      <%= button_to "Desativar", store_path(id: @store.id), method: :delete, data: { turbo_confirm: "Tem certeza que deseja excluir?" }, class: "small-red-button"   %>
      <% end %>
      <%= link_to "Voltar", stores_path, class: 'small-blue-button' %>
    </div>
  </div>
</main>
