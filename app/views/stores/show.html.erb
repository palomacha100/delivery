<header>
  <div class="header-container">
    <div>
      <%= link_to "Início", root_path, class: 'small-blue-button' %>
    </div>
    <div class="header-inline">
      <p class="text-styled">Logged in as <strong><%= current_user.email %></strong></p>
      <%= button_to "Sair", destroy_user_session_path, method: :delete, class: "small-red-button" %>
    </div>
  </div>
</header>
<main>
  <div class="global-container">
    <p style="color: green"><%= notice %></p>
    <h2><%= @store.name %></h2>
    <p class="text-styled">Id: <%= @store.id %> </p>
    <p class="text-styled">CNPJ: <%= @store.cnpj %></p>
    <p class="text-styled">Tipo de estabelecimento: <%= @store.establishment %></p>
    <p class="text-styled">Endereço: <%= @store.address %>, 
      <%= @store.numberaddress %>, 
      <%= @store.complementadress %>
      <%= @store.neighborhood %>
    </p>
    <p class="text-styled">  <%= @store.cep %> - Cidade: <%= @store.city %> -  <%= @store.state %></p>
    <p class="text-styled">Telefone: <%= @store.phonenumber %></p>
    
    <p class="text-styled">Criado em: <%= @store.created_at.strftime("%d/%m/%Y") %></p>
    <p class="text-styled">Atualizado em: <%= @store.updated_at.strftime("%d/%m/%Y") %></p>
 

    <div class="inline-container">
      <%= link_to "Editar", edit_store_path(@store), class: 'small-green-button' %>
      <% if @store.discarded? %>
      <%= button_to "Ativar", active_store_store_path(id: @store.id), method: :put, data: { confirm: "Are you sure?" }, class: "small-green-button"  %>
      <% else %>
      <%= button_to "Desativar", store_path(id: @store.id), method: :delete, data: { turbo_confirm: "Tem certeza que deseja excluir?" }, class: "small-red-button"   %>
      <% end %>
      <%= link_to "Voltar", stores_path, class: 'small-blue-button' %>
    </div>
  </div>
</main>
