      <p class="text-styled">Status: inativo</h3>
    <% else  %>
      <p class="text-styled">Status: ativo</h3>
    <% end  %>
  <p class="text-styled">id: <%= @user.id%></p>
  <div class="inline-container">
    <%= link_to "Voltar", users_path, class: 'small-blue-button' %>
    <% if @user.discarded? %>
      <%= button_to "Activar", active_path(id: @user.id), method: :put, class: 'small-green-button' %>
      <% else  %>
        <%= button_to "Excluir",  destroy_path(id: @user.id), method: :delete,  form: {data: { turbo_confirm: "Tem certeza que deseja excluir esse produto?"  }}, class: "small-red-button"%>
    <% end  %>
  </div>
